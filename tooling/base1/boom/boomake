    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/bin/prelude.pdl"
    chmod 0644 $_INSTALL_ROOT/bin/prelude.pdl || croak "\"chmod 0644 $_INSTALL_ROOT/bin/prelude.pdl\" failed"
