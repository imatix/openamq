    chmod 0644 $_INSTALL_ROOT/doc/Boom/boom_top.html || croak "\"chmod 0644 $_INSTALL_ROOT/doc/Boom/boom_top.html\" failed"
    mkdir -p $_INSTALL_ROOT/bin/
    [ "$BOOM_TRACE" ] && echo "cp prelude.pdl $_INSTALL_ROOT/bin/"
