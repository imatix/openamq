    [ "$BOOM_TRACE" ] && echo "chmod 0644 $_INSTALL_ROOT/doc/Boom/boom_3.html"
    chmod 0644 $_INSTALL_ROOT/doc/Boom/boom_3.html || croak "\"chmod 0644 $_INSTALL_ROOT/doc/Boom/boom_3.html\" failed"
