    $(expand (type))
.           if defined (declare.default)
        $(name) = $(expand (default));\
                                        //  $(string.trim (declare.?'Not documented'):left)
.           else
        $(name);                        //  $(string.trim (declare.?'Not documented'):left)
.           endif
.           if my.precond ?<> ""
#endif
