" $(name)=\\"$(format)\\""
.    endfor
.    for animate
" $(name)=\\"$(format)\\""
.    endfor
"/>"
#if (defined (BASE_THREADSAFE))
, apr_os_thread_current ()
#endif
.    for argument where defined (format) & animate
, $(name:)\
