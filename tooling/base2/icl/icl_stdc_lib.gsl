#if (defined (BASE_THREADSAFE))
" thread=\\"%pp\\""
#endif
.    for argument where defined (format) & animate
" $(name)=\\"$(format)\\""
.    endfor
.    for declare where defined (format)
" $(name)=\\"$(format)\\""
.    endfor
